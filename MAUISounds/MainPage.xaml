<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MAUISounds.MainPage">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center">

            <toolkit:MediaElement x:Name="mediaElement" ShouldLoopPlayback="True" Source="embed://zim.mp4" Volume="0.1" />

            <Button Text="Begin the Annoyance" BackgroundColor="Green" TextColor="LightGreen" Clicked="OnPlayPauseButtonClicked"/>
            <Button Text="End the Suffering" BackgroundColor="Red" TextColor="LightPink" Clicked="OnStopButtonClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
